																										m_edInSort = _T("");
																											m_edInDate = _T("");
																												m_edExDate = _T("");
																													m_edExMemo = _T("");
																														m_edExMoney = _T("");
																															m_edExSort = _T("");
																																m_edTotalIncome = 0;
																																	m_edTotalExpense = 0;
																																		m_edRemainMoney = 0;
																																			//}}AFX_DATA_INIT
																																				// Note that LoadIcon does not require a subsequent DestroyIcon in Win32
																																					m_hIcon = AfxGetApp()->LoadIcon(IDR_MAINFRAME);

